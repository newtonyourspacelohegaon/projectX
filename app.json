{
  "expo": {
    "name": "CampusConnect",
    "slug": "campusconnect",
    "version": "1.0.4",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#8B5CF6",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.campusconnect.app"
    },
    "android": {
      "package": "com.campusconnect.app",
      "versionCode": 4,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "name": "Vybe",
      "shortName": "Vybe",
      "description": "Campus social network for students",
      "themeColor": "#D4FF00",
      "backgroundColor": "#ffffff"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CampusConnect to access your camera for stories and profile photos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CampusConnect to access your photos for profile and posts."
        }
      ],
      "expo-font"
    ],
    "scheme": "campusconnect",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "26f32825-e835-4da0-9347-e0b67cf71cb0"
      }
    }
  }
}
