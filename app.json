{
  "expo": {
    "name": "CampusConnect",
    "slug": "campusconnect",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": false,
    "splash": {
      "backgroundColor": "#8B5CF6",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.campusconnect.app"
    },
    "android": {
      "package": "com.campusconnect.app"
    },
    "web": {
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      "expo-router",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CampusConnect to access your camera for stories and profile photos."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CampusConnect to access your photos for profile and posts."
        }
      ]
    ],
    "scheme": "campusconnect",
    "experiments": {
      "typedRoutes": true
    }
  }
}
