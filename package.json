{
  "name": "campusconnect",
  "version": "1.0.0",
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "dev:web": "expo start --web --port 3000",
    "prebuild": "expo prebuild",
    "build:android": "NODE_OPTIONS='--max-old-space-size=2048' JAVA_HOME=/usr/lib/jvm/java-1.17.0-openjdk-amd64 ANDROID_HOME=/home/pc/Android/Sdk npx eas-cli build --platform android --profile production --local",
    "build:android:local": "npm run build:android",
    "build:android:apk": "NODE_OPTIONS='--max-old-space-size=2048' JAVA_HOME=/usr/lib/jvm/java-1.17.0-openjdk-amd64 ANDROID_HOME=/home/pc/Android/Sdk npx eas-cli build --platform android --profile preview --local",
    "build:android:cloud": "npx eas-cli build --platform android --profile production",
    "build:ios:local": "npx eas-cli build --platform ios --profile production --local",
    "build:ios:cloud": "npx eas-cli build --platform ios --profile production",
    "build:web": "npx expo export --platform web",
    "clean": "rm -rf node_modules .expo android/build ios/build && npm install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/bottom-tabs": "^7.0.0",
    "@react-navigation/native": "^7.0.0",
    "@react-navigation/stack": "^7.0.0",
    "axios": "^1.7.9",
    "expo": "^54.0.32",
    "expo-application": "~7.0.8",
    "expo-auth-session": "~7.0.10",
    "expo-build-properties": "~1.0.10",
    "expo-constants": "~18.0.13",
    "expo-crypto": "~15.0.8",
    "expo-font": "~14.0.11",
    "expo-image": "~3.0.11",
    "expo-image-picker": "~17.0.10",
    "expo-linear-gradient": "~15.0.8",
    "expo-linking": "~8.0.11",
    "expo-router": "~6.0.22",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "expo-updates": "~29.0.16",
    "expo-web-browser": "~15.0.10",
    "lucide-react-native": "^0.563.0",
    "nativewind": "^4.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "^0.21.0",
    "react-native-worklets": "0.5.1",
    "tailwindcss": "^3.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.0",
    "@types/react": "~19.1.10",
    "typescript": "~5.9.2"
  },
  "private": true
}
